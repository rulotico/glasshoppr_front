extends vanilla-layout

block content
  //- Single winerie top
  .row
    .wpay
      .row.norowmargin
        .col-md-6.col-12.text-center.my-auto
          .logo.text-center
            img(src='/images/logo-glasshoppr-white.svg')
        .col-md-6.col-12
          .col-10.col-md-10.mx-auto
            .payment-module
              //- login form
              h2.section-title Premium Account
              .form-group
                input(type='text', class='form-control', placeholder="Full name", autocomplete='false', required='required')
              .form-group
                .container-fluid
                  .row
                    .col-6.nosidepadding
                      input(type='text', onkeypress="return event.charCode >= 48 && event.charCode <= 57", maxlength="15", class='form-control', placeholder='1234 5678 9123 4567', autocomplete='false', required='required')
                    .col-3
                      input(type='text', onkeypress="return event.charCode >= 48 && event.charCode <= 57", maxlength="4", class='form-control', placeholder='CVC', autocomplete='false', required='required')
                    .col-3.nosidepadding
                      input(type='text', onkeypress="return event.charCode >= 48 && event.charCode <= 57", maxlength="5", id="inputDate", class='form-control', placeholder='MM/YY', autocomplete='false', required='required')
              .recurring
                input#test1(type='checkbox')
                label(for='test1') Recurring Payment
              .row
                .col-md-6.text-center
                  a.btn.btn-red(href='/complete-w') Pay
                .col-md-6.text-center
                  a.btn.btn-yellow(href='/complete-w') Link to PayPal
                  
