extends vanilla-layout

block content
  .row
    .wlogin
      .row.norowmargin
        .col-md-6.col-12.text-center.my-auto
          .logo.text-center
            img(src='/images/logo-glasshoppr.png')
        .col-md-6.col-12
          .col-10.col-md-10.mx-auto
            .register-module
              //- login form
              h2.section-title WELCOME!
              p.subtitle ACTIVATE YOUR WINERY ACCOUNT
              .form-group
                input(type='text', class='form-control', placeholder="Winery's name", autocomplete='false', required='required')
              .form-group
                .container-fluid
                  .row
                    .col-3.nosidepadding
                      input(type='text', class='form-control', placeholder='Address', autocomplete='false', required='required')
                    .col-3.pr-0
                      input(type='text', class='form-control', placeholder='City', autocomplete='false', required='required')
                    .col-3.pr-0
                      input(type='text', class='form-control', placeholder='State', autocomplete='false', required='required')
                    .col-3.pr-0
                      input(type='text', onkeypress="return event.charCode >= 48 && event.charCode <= 57", class='form-control', placeholder='Zip Code', autocomplete='false', required='required')
              .form-group
                input(type='text', class='form-control', placeholder="Full name", autocomplete='false', required='required')
              .form-group
                input(type='text', class='form-control', placeholder="Your Title", autocomplete='false', required='required')
              .form-group
                input(type='tel', onkeypress="return event.charCode >= 48 && event.charCode <= 57", class='form-control', placeholder='Phone', autocomplete='false', required='required')
              .form-group
                input(type='email', class='form-control', placeholder='Email', autocomplete='false', required='required')
              .form-group
                textarea(class='form-control', placeholder='Write us a message', rows='1')
              .row
                .col-12.text-center
                  a.btn.btn-red(href="/premium-w") Login
                  
